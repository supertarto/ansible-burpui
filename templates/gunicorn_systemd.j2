[Unit]
Description=Burp-UI gunicorn service
After=network.target

[Service]
User={{ burpui_user }}
Group={{ burpui_group }}
# Environment variables required in python3
Environment=LC_ALL=en_US.UTF-8
Environment=LANG=en_US.UTF-8
ExecStart={{ burpui_gunicorn_bin }} -c /etc/burp/burpui_gunicorn.py 'burpui:create_app(conf="/etc/burp/burpui.cfg",logfile="/var/log/gunicorn/burp-ui_info.log")'

[Install]
WantedBy=multi-user.target